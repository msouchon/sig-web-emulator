import {VerticalBox} from "std-widgets.slint";

export global App {
    in property<string> name: "App Name";
    in property<string> version: "1.0.0";
}

export component AppWindow inherits Window {
    title: App.name;

    VerticalBox {
        Text {
            text: App.name;
        }

        Text {
            text: "Version: \{App.version}";
        }
    }
}